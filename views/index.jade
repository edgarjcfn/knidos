extends layout
block imports
  script(type='text/javascript', src='/javascripts/FeedCtrl.js')

block content
  div(class='container')
    div(class='page-header' id='banner')
      div(class='row')
        div(class='col-lg-12')
          h1 #{title}
  div(id='feed' ng-controller="FeedCtrl")
    div(ng-repeat='post in posts')
      div(class='modal-dialog')
        div(class='modal-content')
          div(class='modal-body')
            span 
              {{post.description}}, {{post.link}}, 
            span(class='badge').
              ({{post.karma}})
          div(class='modal-footer')
            button(type='button' class='btn-default').
              Vote Up
            button(type='button' class='btn-default').
              Vote Down

    
